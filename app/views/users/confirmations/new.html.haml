- provide :title, t('devise.confirmations.new.title')

.container-sm
  %h1= t('devise.confirmations.new.title')

  .strong
    = simple_form_for(resource, url: user_confirmation_path, html: { method: :post }) do |f|
      = f.full_error :confirmation_token

      = f.input :email, input_html: { class: 'input-lg' }, required: true, autofocus: true

      .form-actions
        %button.btn.btn-lg.btn-primary(type='submit')
          = t('devise.confirmations.new.submit')
